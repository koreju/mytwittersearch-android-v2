<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false" >

    <fragment
        android:id="@+id/tweet_list_fragment"
        android:name="com.example.mytwittersearch.fragment.TweetListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp" />

    <fragment
        android:id="@+id/tweet_detail_fragment"
        android:name="com.example.mytwittersearch.fragment.TweetDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp" />

</LinearLayout>